<?xml version="1.0"?>
<parameters>
    <dbtype>postgres</dbtype>
    <driver>org.postgresql.Driver</driver>
    <DBUrl>jdbc:postgresql://localhost:5432/tpcc/</DBUrl>
    <DBName>tpcc</DBName>
    <username>parallels</username>
    <password>parallels</password>

    <!-- Scalefactor in TPCC is the number of warehouses-->
    <scalefactor>1</scalefactor>
   	
    <!-- The workload -->
    <terminals>1</terminals>
    <works>
        <work>
          <time>10</time>
          <rate>10</rate>
          <weights>100,0,0,0,0</weights>
        </work>
	</works>
	
    <!-- TPCC Procedures declaration -->
   	<transactiontypes>
    	<transactiontype>
    		<name>NewOrder</name>
    		<id>1</id>
    	</transactiontype>
    	<transactiontype>
    		<name>Payment</name>
    		<id>2</id>
    	</transactiontype>
    	<transactiontype>
    		<name>OrderStatus</name>
    		<id>3</id>
    	</transactiontype>
    	<transactiontype>
    		<name>Delivery</name>
    		<id>4</id>
    	</transactiontype>
    	<transactiontype>
    		<name>StockLevel</name>
    		<id>5</id>
    	</transactiontype>
   	</transactiontypes>
      
</parameters>
